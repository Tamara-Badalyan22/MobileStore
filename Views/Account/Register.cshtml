@model Shop.Models.ViewModels.RegisterModel

<h2>Registration</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div>
            <label asp-for="Email">Enter your mail</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email"  class="text-danger"/>
        </div>
        <div>
            <label asp-for="Password">Enter your password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"  class="text-danger"/>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Reapet passsword</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"  class="text-danger"/>
        </div>
        <div>
            <input  class="btn btn-primary"type="submit" value="Join" />
        </div>
    </div>
</form>